// Ronan Reilly 2012package{		import flash.display.*;	import flash.geom.*	import flash.events.Event;		public class Particle extends Sprite {				private var _xpos:Number;		private var _ypos:Number;		private var _xvel:Number;		private var _yvel:Number;		private var _grav:Number;		private var _scaleFactor:Number		public function Particle(xp:Number, yp:Number, xvel:Number, yvel:Number, grav:Number, col:uint, scalFac:Number) {			_xpos = xp;			_ypos = yp;			_xvel = xvel			_yvel = yvel			_grav = grav;			_scaleFactor = scalFac;						var ball:Sprite = new Ball();			addChild(ball);						x = _xpos;			y = _ypos;			alpha = Math.random() * 0.8 +.1;			scaleX = scaleY = Math.random() * _scaleFactor + .1;						var colorInfo:ColorTransform = ball.transform.colorTransform;			colorInfo.color = col;			ball.transform.colorTransform = colorInfo;						addEventListener(Event.ENTER_FRAME, onRun, false, 0, true);		}				private function onRun(evt:Event):void {			_yvel += _grav;			_xpos += _xvel;			_ypos += _yvel;			x = _xpos;			y = _ypos;			if (_xpos < 0 || _ypos < 0 || _xpos > stage.stageWidth || _ypos > stage.stageHeight) {			   removeEventListener(Event.ENTER_FRAME, onRun);			   parent.removeChild(this);			}		}	}}